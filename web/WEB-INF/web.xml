    <servlet-name>FindAlbumServlet</servlet-name>
    <url-pattern>/FindAlbumServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QueryPhotoServlet</servlet-name>
    <url-pattern>/QueryPhotoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowUserServlet</servlet-name>
    <url-pattern>/ShowUserServlet</url-pattern>
  </servlet-mapping>
</web-app>
